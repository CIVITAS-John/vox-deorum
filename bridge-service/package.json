{
  "name": "bridge-service",
  "version": "1.0.0",
  "description": "Bridge Service for Vox Deorum - Communication layer between Lua and external AI services",
  "type": "module",
  "main": "dist/index.js",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "node ../node_modules/typescript/bin/tsc",
    "start": "npm run build && npm run start:dist",
    "start:dist": "node dist/index.js",
    "type-check": "tsc --noEmit",
    "clean": "rimraf dist",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:mock": "cross-env USE_MOCK=true vitest run",
    "test:real": "cross-env USE_MOCK=false vitest run",
    "test:mock-watch": "cross-env USE_MOCK=true vitest",
    "docs": "typedoc",
    "mod:md5": "tsx scripts/generate-mod-md5.ts"
  },
  "keywords": [
    "civilization",
    "bridge",
    "lua",
    "ai",
    "nodejs"
  ],
  "author": "John Chen",
  "license": "CC-BY-NC-SA-4.0",
  "engines": {
    "node": ">=20.0.0"
  }
}
