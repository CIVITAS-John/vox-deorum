{
  "name": "bridge-service",
  "version": "1.0.0",
  "description": "Bridge Service for Vox Deorum - Communication layer between Lua and external AI services",
  "type": "module",
  "main": "dist/index.js",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "debug": "npm run build && node --inspect-brk=9229 --enable-source-maps dist/index.js",
    "type-check": "tsc --noEmit",
    "lint": "eslint src/**/*.ts",
    "clean": "rimraf dist",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "mock": "npm run build && tsx scripts/test-with-mock.ts",
    "test:mock-dll": "tsx scripts/test-with-mock.ts",
    "dev:with-mock": "npm run test:mock-dll & sleep 2 && npm run dev"
  },
  "keywords": [
    "civilization",
    "bridge",
    "lua",
    "ai",
    "nodejs"
  ],
  "author": "John Chen",
  "license": "MIT",
  "dependencies": {
    "axios": "^1.6.2",
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "helmet": "^7.1.0",
    "node-ipc": "^9.2.1",
    "uuid": "^9.0.1",
    "winston": "^3.11.0"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/node": "^20.10.4",
    "@types/node-ipc": "^9.2.3",
    "@types/uuid": "^9.0.7",
    "@typescript-eslint/eslint-plugin": "^6.13.1",
    "@typescript-eslint/parser": "^6.13.1",
    "eslint": "^8.54.0",
    "vitest": "^2.0.5",
    "rimraf": "^5.0.5",
    "@vitest/coverage-v8": "^2.0.5",
    "tsx": "^4.6.2",
    "typescript": "^5.3.2"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}
