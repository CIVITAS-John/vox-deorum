{
  "name": "mcp-server",
  "version": "1.0.0",
  "description": "MCP Server for Vox Deorum - Exposes Civilization V game state as MCP resources and tools",
  "type": "module",
  "main": "dist/index.js",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "node ../node_modules/typescript/bin/tsc",
    "start": "npm run build && npm run start:dist",
    "start:dist": "node dist/index.js",
    "type-check": "tsc --noEmit",
    "clean": "rimraf dist",
    "test": "vitest run",
    "test:stdio": "cross-env TEST_TRANSPORT=stdio vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "inspect": "npx @modelcontextprotocol/inspector",
    "codegen": "kysely-codegen --dialect sqlite --singularize --out-file ./src/database/localization.d.ts",
    "docs": "typedoc"
  },
  "keywords": [
    "civilization",
    "mcp",
    "model-context-protocol",
    "ai",
    "nodejs",
    "typescript"
  ],
  "author": "John Chen",
  "license": "MIT",
  "engines": {
    "node": ">=20.0.0"
  }
}
